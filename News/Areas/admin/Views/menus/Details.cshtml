@model News.Models.menu

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Thông tin chi tiết
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        Tên
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    @*<dt>
                        @Html.DisplayNameFor(model => model.link)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.link)
                    </dd>*@

                    <dt>
                        Meta
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>

                    <dt>
                        Ẩn/hiện
                    </dt>

                    <dd>
                        @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </dd>

                    <dt>
                        Vị trí
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.position)
                    </dd>

                    <dt>
                        Ngày tạo
                    </dt>

                    <dd>
                        @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </dd>

                </dl>
                <div>
                    <p>
                        @Html.ActionLink("Cập nhật", "Edit", new { id = Model.id_m },htmlAttributes:new { @class="btn btn-danger"}) |
                        @Html.ActionLink("Trở lại", "Index")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

