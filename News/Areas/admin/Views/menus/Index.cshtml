@model IEnumerable<News.Models.menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<h2>Danh sách các ngành</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <tr>
        <th>
            Tên
        </th>
        
        <th>
            Meta
        </th>
        <th>
            Ẩn/hiện
        </th>
        <th>
            Vị trí
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.meta)
        </td>
        <td>
            @if ((bool)item.hide)
            {<text>Ẩn</text> }
        else
        { <text>Hiện</text>}
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.position)
        </td>
        
        <td > <center>
            @Html.ActionLink(" ", "Edit", new { id=item.id_m },htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-edit" })
            @Html.ActionLink(" ", "Details", new { id=item.id_m },htmlAttributes:new { @class="btn btn-info glyphicon glyphicon-unchecked"})
            @Html.ActionLink(" ", "Delete", new { id=item.id_m },htmlAttributes:new { @class="btn btn-danger glyphicon glyphicon-remove"})
        </center></td>
    </tr>
}

</table>
