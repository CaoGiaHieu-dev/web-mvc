@model News.Models.menu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Xoá
            </div>
            <div class="panel-body">
                <h3>Bạn muốn xoá ngành này?</h3>
                <dl class="dl-horizontal">
                    <dt>
                        Tên
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    @*<dt>
                        @Html.DisplayNameFor(model => model.link)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.link)
                    </dd>*@

                    <dt>
                        Meta
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>

                    <dt>
                        Ẩn/hiện
                    </dt>

                    <dd>
                        @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </dd>

                    <dt>
                        Vị trí
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.position)
                    </dd>

                    <dt>
                        Ngày tạo
                    </dt>

                    <dd>
                        @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xác nhận" class="btn btn-danger" /> |
                        @Html.ActionLink("Trở lại", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

