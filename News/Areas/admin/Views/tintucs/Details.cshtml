@model News.Models.tintuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<h2>Thông tin</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Chi tiết Tin tức
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        Tiêu đề
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        Minh hoạ
                    </dt>

                    <dd>
                        <img src="~/Content/upload/img/@Model.img" width="150px" />
                    </dd>

                    <dt>
                        Mô tả
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>

                    <dt>
                        Chi tiết
                    </dt>

                    <dd>

                        @Html.Raw(Model.detail)
                    </dd>

                    <dt>
                        Meta
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>

                    <dt>
                        Ẩn/hiện
                    </dt>

                    <dd>
                        @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </dd>

                    <dt>
                        Vị trí
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.position)
                    </dd>

                    <dt>
                        Ngày
                    </dt>

                    <dd>
                        @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </dd>

                </dl>

                <p>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.id }) |
                    @Html.ActionLink("Quay lại", "Index")
                </p>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>